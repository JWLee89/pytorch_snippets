[flake8]
select = B,C,E,F,P,T4,W,B9,Q0
max-line-length = 120
ignore =
    # Line break occurred before a binary operator
    W503, 
    # Line break occurred after a binary operator
    W504,
    # Module level import not at top of file (for conditional import) 
    E402,
    # Do not use variables named 'I', 'O', or 'l' 
    E741,
    # Local variable name is assigned to but never used 
    F841 
extend-ignore = E203 # Whitespace before ':' black
